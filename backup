  <script type="module">
    import { initializeApp, getApps, getApp } from "https://www.gstatic.com/firebasejs/11.6.0/firebase-app.js";
    import { getDatabase, ref, get, remove } from "https://www.gstatic.com/firebasejs/11.6.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCq8eXVoQtt_l9EFkIhYxzoUvW7HOIvZzk",
      authDomain: "pcu-maps-5d985.firebaseapp.com",
      databaseURL: "https://pcu-maps-5d985-default-rtdb.asia-southeast1.firebasedatabase.app",
      projectId: "pcu-maps-5d985",
      storageBucket: "pcu-maps-5d985.appspot.com",
      messagingSenderId: "922913954447",
      appId: "1:922913954447:web:c9f2db5e796c56fb7b2efa"
    };

    let app = getApps().length ? getApp() : initializeApp(firebaseConfig);
    const db = getDatabase(app);

    function fetchEvents() {
      const eventListRef = ref(db, 'events');
      const eventListDiv = document.getElementById("event-list");

      get(eventListRef).then((snapshot) => {
        eventListDiv.innerHTML = '';
        const events = snapshot.val();
        if (!events) {
          eventListDiv.innerHTML = "<p>No events available.</p>";
          return;
        }

        const today = new Date().toISOString().split('T')[0];
        const sortedEvents = Object.entries(events).sort((a, b) => (
          new Date(a[1].selected_date) - new Date(b[1].selected_date)
        ));

        sortedEvents.forEach(([eventId, event]) => {
          const div = document.createElement("div");
          div.className = "event-item";
          div.setAttribute("data-course", (event.course || '').toUpperCase());
          div.setAttribute("data-department", (event.department || '').toUpperCase());
          div.setAttribute("data-event-type", event.event_type || '');
          div.setAttribute("data-location", event.location || '');

          div.innerHTML = `
            ${new Date(event.selected_date) < new Date(today) ? '<div class="event-ended">Event Ended</div>' : ''}
            <h2>${event.event_title}</h2>
            <p>${event.event_description}</p>
            <p>Date: ${event.selected_date}</p>
            <p>Time: ${event.start_time} - ${event.end_time}</p>
            <p>Department: ${event.department}</p>
            <p>Course: ${event.course}</p>
            <p>Location: ${event.location}</p>
            <p>Event Type: ${event.event_type}</p>
            <div class="button-container">
              <button onclick="window.location.href='/pages/edit_events.html?eventId=${eventId}'">Edit</button>
              <button onclick="deleteEvent('${eventId}')">Delete</button>
            </div>
          `;
          eventListDiv.appendChild(div);
        });

        initIsotopeFiltering();
      });
    }

    function deleteEvent(eventId) {
      const eventRef = ref(db, 'events/' + eventId);
      remove(eventRef).then(() => {
        alert("Event deleted successfully!");
        fetchEvents();
      });
    }

    window.deleteEvent = deleteEvent;
    window.onload = fetchEvents;

    function initIsotopeFiltering() {
      const grid = document.querySelector('#event-list');
      const iso = new Isotope(grid, {
        itemSelector: '.event-item',
        layoutMode: 'fitRows'
      });

      function getFilter() {
        const course = document.querySelector('#course-filter').value;
        const department = document.querySelector('#department-filter').value;
        const eventType = document.querySelector('#event-type-filter').value;
        const location = document.querySelector('input[name="location"]:checked')?.value || '';

        let filter = '';
        if (course) filter += `[data-course="${course.toUpperCase()}"]`;
        if (department) filter += `[data-department="${department.toUpperCase()}"]`;
        if (eventType) filter += `[data-event-type="${eventType}"]`;
        if (location && location !== 'All') filter += `[data-location="${location}"]`;
        return filter || '*';
      }

      ['#course-filter', '#department-filter', '#event-type-filter'].forEach(selector => {
        document.querySelector(selector).addEventListener('change', () => {
          iso.arrange({ filter: getFilter() });
        });
      });

      document.querySelectorAll('input[name="location"]').forEach(input => {
        input.addEventListener('change', () => {
          iso.arrange({ filter: getFilter() });
        });
      });

      const searchInput = document.querySelector('#search-input');
      if (searchInput) {
        searchInput.addEventListener('input', () => {
          const searchText = searchInput.value.toLowerCase();
          iso.arrange({
            filter: function (itemElem) {
              const text = itemElem.textContent.toLowerCase();
              return text.includes(searchText) && itemElem.matches(getFilter());
            }
          });
        });
      }
    }
  </script>
